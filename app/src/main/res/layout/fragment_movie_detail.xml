<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.podium.technicalchallenge.GetMoviesQuery.Movie" />

        <variable
            name="director"
            type="com.podium.technicalchallenge.GetMoviesQuery.Director" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="5dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{movie.title}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/movie_image"
            android:loadImg="@{movie.posterPath}"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/movieDesc"
            app:layout_constraintLeft_toRightOf="@id/tvTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGenreName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{`genres:` +movie.genres.toString().replace('[', ' ').replace(']', ' ')}"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/ivThumbnail"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintWidth_percent=".5" />

        <TextView
            android:id="@+id/movieDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:text="@{movie.overview}"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@id/tvGenreName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDirector" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{`rating: ` +movie.voteAverage}"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@id/tvGenreName"
            app:layout_constraintTop_toBottomOf="@id/tvGenreName" />

        <TextView
            android:id="@+id/tvDirector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{`director: ` +director.name}"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/ivThumbnail"
            app:layout_constraintTop_toBottomOf="@id/tvRating"
            app:layout_constraintWidth_percent=".5" />

        <TextView
            android:id="@+id/castHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cast_information"
            app:layout_constraintTop_toBottomOf="@id/movieDesc" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvCast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/castHeader" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>