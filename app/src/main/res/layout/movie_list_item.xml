<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.podium.technicalchallenge.GetMoviesQuery.Movie" />
        <variable
            name="movieClickListener"
            type="com.podium.technicalchallenge.ui.dashboard.MovieClickListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:foregroundGravity="center"

        app:cardCornerRadius="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:onClick="@{movieClickListener::onMovieListItemClicked}"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movieId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(movie.id)}"
                android:visibility="invisible"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvGenreName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="@{movie.title}"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:loadImg="@{movie.posterPath}"
                app:layout_constraintBottom_toBottomOf="@id/tvRating"
                app:layout_constraintLeft_toRightOf="@id/tvGenreName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvGenreName"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@{`rating: ` +String.valueOf(movie.voteAverage)}"
                android:textColor="@color/design_default_color_primary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvGenreName"
                app:layout_constraintWidth_percent="0.4"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>